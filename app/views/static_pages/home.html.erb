 <!-- Navigation -->
    <%= render "shared/navbar" %>

    <!-- Header -->
    <div class="intro-header">
        <div class="intro-header-mask">

            <div class="container">

                <div class="row">
                    <div class="col-lg-12">
                        <div class="intro-message">
                            <h1>Weekly Code Review</h1>
                            <h3>Pros review code every week</h3>
                            <hr class="intro-divider">
                            <br>
                            <div>
                                <div class="mc_embed_signup">
                                    <form action="//eriktrautman.us7.list-manage.com/subscribe/post?u=53cb3afbab2e6200ee22b4454&amp;id=4ffa952fb7" method="post" id="mc-embedded-subscribe-form" name="mc-embedded-subscribe-form" class="validate" target="_blank" novalidate>
                                        <div class="mc_embed_signup_scroll">
                                    
                                            <div class="mc-field-group">
                                                <input type="email" value="" name="EMAIL" placeholder="email address" class="required email" id="mce-EMAIL">
                                            </div>

                                            <div class="mce-responses" class="clear">
                                                <div class="response" id="mce-error-response" style="display:none"></div>
                                                <div class="response" id="mce-success-response" style="display:none"></div>
                                            </div>    <!-- real people should not fill this in and expect good things - do not remove this or risk form bot signups-->
                                            <div class="clear"><input type="submit" value="Submit" name="subscribe" id="mc-embedded-subscribe" class="btn btn-medium btn-primary"></div>
                                        </div>
                                    </form>
                                </div>
                                <!--End mc_embed_signup-->
                            </div>
                        </div>
                    </div>
                </div>

            </div>
            <!-- /.container -->
        </div>
    </div>
    <!-- /.intro-header -->

    <!-- Page Content -->

    <div class="content-section-a">

        <div class="container">

            <div class="row">
                <div class="col-lg-5 col-sm-6">
                    <hr class="section-heading-spacer">
                    <div class="clearfix"></div>
                    <h2 class="section-heading">Submit your code<br>get it reviewed</h2>
                    <p class="lead">We send out a code review and a challenge. The challenge gets reviewed the next week. Your code skillz get better. Boom. Maybe you just want some opinions on finesse. That's cool too. We know you want more finesse.</p>
                </div>
                <div class="col-lg-5 col-lg-offset-2 col-sm-6">
                    <%= image_tag("sublime_screenshot1.png", class: "sideline-image") %>
                </div>
            </div>

        </div>
        <!-- /.container -->

    </div>
    <!-- /.content-section-a -->

    <div class="content-section-b">

        <div class="container">

            <div class="row">
                <div class="col-lg-5 col-lg-offset-1 col-sm-push-6  col-sm-6">
                    <hr class="section-heading-spacer">
                    <div class="clearfix"></div>
                    <h2 class="section-heading">Learn from other people<br></h2>
                    <p class="lead">Code is reviewed by people who know their stuff, and we share that review with the mailing list.  People who are new get better, and the pros get to kill bad habits before they start.  Less bad code, more happy people. Everyone wins!</p>
                </div>
                <div class="col-lg-5 col-sm-pull-6  col-sm-6">
                    <%= image_tag("sublime_screenshot2.jpg", class: "sideline-image") %>
                </div>
            </div>

        </div>
        <!-- /.container -->

    </div>
    <!-- /.content-section-b -->

    <!-- Email Drop -->
        <div class="banner">

        <div class="container">

            <div class="row email-block">
                <div class="col-lg-6">
                    
                    <h3>We only send the good stuff</h3>
                </div>

                <div class="col-lg-6">

                    <div class="mc_embed_signup">
                        <form action="//eriktrautman.us7.list-manage.com/subscribe/post?u=53cb3afbab2e6200ee22b4454&amp;id=4ffa952fb7" method="post" id="mc-embedded-subscribe-form" name="mc-embedded-subscribe-form" class="validate" target="_blank" novalidate>
                            <div class="mc_embed_signup_scroll">
                        
                                <div class="mc-field-group">
                                    <input type="email" value="" name="EMAIL" placeholder="email address" class="required email" id="mce-EMAIL">
                                </div>

                                <div class="mce-responses" class="clear">
                                    <div class="response" id="mce-error-response" style="display:none"></div>
                                    <div class="response" id="mce-success-response" style="display:none"></div>
                                </div>    <!-- real people should not fill this in and expect good things - do not remove this or risk form bot signups-->
                                <div class="clear"><input type="submit" value="Submit" name="subscribe" id="mc-embedded-subscribe" class="btn btn-medium btn-primary"></div>
                            </div>
                        </form>
                    </div>
                    <!--End mc_embed_signup-->
                </div>
            </div>

        </div>
        <!-- /.container -->

    </div>
    <!-- /.banner -->
    <!-- Footer -->
    <%= render "shared/footer" %>